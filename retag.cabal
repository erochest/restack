-- Initial c18sgml.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                c18sgml
version:             0.1.0.0
synopsis:            Munging SGML.
-- description:         
license:             Apache-2.0
license-file:        LICENSE
author:              Eric Rochester
maintainer:          erochest@virginia.edu
-- copyright:           
-- category:            
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
  exposed-modules:     C18.Actions
                     , C18.Actions.DeNest
                     , C18.Actions.Report
                     , C18.Balance
                     , C18.Types
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.8 && <4.9
                     , bytestring
                     , conduit
                     , conduit-combinators
                     , conduit-extra
                     , containers
                     , errors
                     , tagsoup
                     , text
                     , xml-conduit
                     , xml-types
  hs-source-dirs:      src
  default-language:    Haskell2010

executable c18sgml
  main-is:             Main.hs
  -- other-modules:       
  -- other-extensions:    
  build-depends:       base >=4.8 && <5
                     , c18sgml
                     , bytestring
                     , conduit
                     , conduit-combinators
                     , containers
                     , errors
                     , optparse-applicative
                     , tagsoup
                     , text
  hs-source-dirs:      app
  default-language:    Haskell2010


test-suite c18sgml-specs
  type:                exitcode-stdio-1.0
  ghc-options:         -threaded -rtsopts
  hs-source-dirs:      specs
  main-is:             Specs.hs
  build-depends:         base
                       , QuickCheck
                       , smallcheck
                       , hspec
                       -- , tasty
                       -- , tasty-quickcheck
                       -- , tasty-smallcheck
  default-language:    Haskell2010


source-repository head
  type:                git
  location:            git://github.com/erochest/c18sgml.git
